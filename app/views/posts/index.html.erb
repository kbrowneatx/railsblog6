<h1>All Posts</h1>

<% @posts.each do |post| %>
    <div>
		<h3>|<%= link_to post.title, post %>|</h3>
		<p><%= post.content %></p>
		<p><%= link_to 'Edit', edit_post_path(post) %> &emsp; | &emsp;
		  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
	</div>
<% end %>


<hr />
<%= link_to 'New Post', new_post_path %>
