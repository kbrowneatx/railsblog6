<h1>All Posts</h1>

<% @posts.each do |post| %>
    <div class="well">
		<h3><%= link_to post.title, post %></h3>
		<p><%= post.content %></p>
		<p><%= link_to 'Edit', edit_post_path(post), { :class => "btn btn-warning" } %>
		  <%= link_to 'Delete', post, { :class => "btn btn-danger" } , method: :delete, data: { confirm: 'Are you sure?' } %></p>
	</div>
<% end %>


<hr />
<%= link_to 'New Post', new_post_path, { :class => "btn btn-success" } %>
