<h1>List of Users</h1>

<table class='table table-striped'>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Twitter</th>
    <th>Role</th>
    <th>Options</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %> <span class="top_commenter"><%= if @avids.include?(user.id) then "top commenter" end %></span></td>
    <td><%= user.email %></td>
    <td><%= user.twitter %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'New User', new_user_path, { :class => "btn btn-success" } %></p>